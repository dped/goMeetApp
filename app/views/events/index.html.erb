<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1513622118278-bc041b3c13ed?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1502&q=80">
    <div class="banner-container container">
      <h1>GoMeet.</h1>
      <p>Find exiting events in Copenhagen</p>
      <div class="banner-buttons">
        <div><%= link_to  "Create event", new_event_path, class:"btn btn-flat" %></div>
        <div><%= link_to  "My Profile", new_event_path, class:"btn btn-flat" %></div>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-8">
    <div class="row pr-5">
      <% @events.each do |event| %>
      <div class="col-6">
        <div class="card-trip mt-5">
          <div class="top-background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1455594408994-253112b1b26e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80')">
            <div class="card-image-title">
            <%= link_to event.title, event_path(event)%>
            </div>
          </div>
            <div class="card-trip-infos">
                <div>
                  <%= event.description[0..30]...%> <br>
                </div>
              <h2 class="card-trip-pricing">DKK <%= event.price %></h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
              </div>
            </div>
          </div>
        <% end %> <br>
      </div>
    </div>
  <div id="index-map" class="col-4">
    <div
      id="map"
      style="width: 500px;
      height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
