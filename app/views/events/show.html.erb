<div class="container-padding header">
  <div class="row bg-white">
    <div class="col-8">
      <p>Wednesday, August 18, 2019</p>
      <h1><%= @event.title %></h1>
        <div class="time d-flex align-items-center mt-3">
          <div class="d-flex">
            <p class="mr-3">From: </p>
            <p class="mr-3"><%=  @event.start_time%></p>
            <p class="mr-3"> To: </p>
            <p><%=  @event.end_time%></p>
          </div>
        </div><!-- end time -->
        <div class="d-flex align-items-center">
          <div class="avatar-large">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier" %>
          </div>
          <div class="ml-3 d-flex">
            <p class="mr-2"><strong>Hosted by: </strong></p>
            <p class="mr-2"><%= @event.user.first_name %></p>
            <p><%= @event.user.last_name %></p>
          </div>
        </div>
      </div><!-- top left header end -->
      <div class="col-4 event-status mt-5">
        <p><strong>Are You going?</strong><span><p>4 people going</p></span></p>
          <div class="flex-container d-flex justify-content-around">
            <div class="flex-item d-flex flex-grow-1 mr-3">
              <button type="button" class="btn btn-action btn-outline-primary"><i class="fas fa-check"></i></button>
            </div>
          <div class="flex-item d-flex flex-grow-1">
            <button type="button" class="btn btn-action btn-outline-primary"><i class="fas fa-times"></i></button>
          </div>
        </div>
      </div>
  </div>
</div><!-- end header -->


